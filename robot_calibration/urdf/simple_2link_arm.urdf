<?xml version="1.0"?>
<robot name = "pino_first_try">

  <material name="violet">
    <color rgba="0.5 0 1 1"/>
  </material>

  <material name="pink">
    <color rgba="1 0.75 0.796 1"/>
  </material>
  
  <link name="base_link">
    <visual>
      <geometry>
          <box size="0.1 0.1 0.1"/>
      </geometry>
      
    </visual>
  </link>

  <link name="arm_1">
    <visual>
      <geometry>
        <box size="1.8 0.02 0.1"/>
      </geometry> 
      <origin xyz="0.9 0.0 0.0"/>
      <material name="violet"/>
    </visual>   
  </link>

  <link name="arm_2">
    <visual>
      <geometry>
          <box size="1 0.02 0.1"/>
      </geometry>  
      <origin xyz="0.5 0.0 0.0" rpy="0.0 0.0 0"/>
      <material name="pink"/>  
    </visual>
  </link>

  <joint name="base_to_arm_1" type="revolute">
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="6.28" effort="1000.0" velocity="50.0"/>
    <parent link="base_link"/>
    <child link="arm_1"/>
    <origin xyz="0.0 0.0 0.0"/>     
  </joint>

  <joint name="arm_1_to_arm_2" type="revolute">
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="6.28" effort="1000.0" velocity="50.0"/>
    <parent link="arm_1"/>
    <child link="arm_2"/>
    <origin xyz= "1.8 0 0"/>     
  </joint>

</robot>